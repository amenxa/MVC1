@model IEnumerable<Item> 


<partial name ="_partilanoti" />
<body>
     <div class="container p-3">
         <div class="row p-4">
             <div class="col-6">
                 <h2 class="text-primary">Item veiw</h2>
             </div>
             <div class="col-6 text-end">
                 <a asp-controller="Item" asp-action="newItem" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp; add new Item
                </a>
             </div>
         </div>
         
        <form asp-Controller="Item" asp-action="Index" method="get">
            <div class="mb-3">
                <label>Filter on Price</label>
                <input type ="number" name="price" class="form-control" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-danger" >filter</button>
            </div>
         </form>
     


    </div>
    <table class="table table-bordered table-striped" style="width=100%">
        <thead>
            <tr>
                <th>
                     Item Name
                </th>
                <th>
                    Item Price
                </th>
                <th>
                    Category
                </th>
                <th>
                    Edit or delete 
                </th>
            </tr>
        </thead>

        <tbody>
            
            @foreach (var it in Model)
            {
                
                    <tr class="table-primary">

                    <td width="30%">
                        @it.Name 
                    </td>
                    <td width="20%">
                        @it.price
                    </td>
                    <td width="30%">
                       @it.category.Name
                    </td>

                    <td width="20%">
                        <a asp-controller="Item" asp-action="newItem" asp-route-Id="@it.Id"  class="btn btn-sm btn-outline-success">
                            <i class="bi bi-pencil-square"></i> &nbsp;
                        </a>
                        &nbsp;
                        <a asp-controller="Item" asp-action="delete" asp-route-Id="@it.Id"class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
</body>
